{
    "root": true,
    "extends": ["eslint:recommended", "prettier"],
    "env": {
      "node": true,
      "es2022": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/naming-convention": "warn",
      "array-callback-return": "error",
      "curly": "warn",
      "eqeqeq": "warn",
      "no-throw-literal": "warn"
    },
    "ignorePatterns": [
      "out",
      "dist",
      "**/*.d.ts",
      "**/*.jar",
      "**/*.config",
      "**/*.sh",
      "**/*.md"
    ]
  }
  